    <!--    Stili Buttons Edit Name    -->
    <Style TargetType="Button" x:Key="NameButtons">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding EditName}" Value="True">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Width" Value="30"/>
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Style.Resources>
    </Style>


    <!--    Stili Buttons Edit Username    -->
    <Style TargetType="Button" x:Key="UsernameButtons">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding EditUsername}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Width" Value="30"/>
            </DataTrigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="10"/>
            </Style>
        </Style.Resources>
    </Style>



    <!--    Stili Buttons Salva/Aggiungi e Elimina/Anulla per i Blog    -->
    <Style TargetType="Button" x:Key="SaveAddBlog">
        <Setter Property="Content" Value="{StaticResource Add}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding BlogInserting}" Value="True">
                <Setter Property="Content" Value="{StaticResource Save}"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding EditBlog}" Value="True">
                <Setter Property="Content" Value="{StaticResource Add}"/>
            </DataTrigger>
        </Style.Triggers>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>
    <Style TargetType="Button" x:Key="DeleteCancelBlog">
        <Setter Property="Content" Value="{StaticResource Delete}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding BlogInserting}" Value="True">
